{# /** * @file * Theme override to display a single component. * * header area
template */ #}
<header>
  <div class="main-header">
    <div class="container">
      <div class="row">
        {% if page.header_left %}
        <div
          class="header-section header-left col-lg-4 col-md-6 col-sm-12 order-lg-1 order-md-2"
        >
          {{ page.header_left }}
        </div>
        {% endif %}
        {% if page.header_middle %}
        <div
          class="header-section header-middle col-lg-4 col-md-12 col-sm-12 order-lg-2 order-md-1"
        >
          {{ page.header_middle }}
          <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
          </div>
        </div>
        {% endif %}  
        {% if page.header_right %}
        <div
          class="header-section header-right col-lg-4 col-md-6 col-sm-12 order-lg-3 order-md-3"
        >
          {{ page.header_right }}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="navigation-section">
    {% if page.navigation %}
    <div class="main-menu">
      <div class="container">{{ page.navigation }}</div>
    </div>
    {% endif %}
  </div>
</header>
